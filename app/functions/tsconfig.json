{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node","jest"],
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts", "src/@types/.d.ts"
  ],
  "exclude": ["node_modules"]
}
